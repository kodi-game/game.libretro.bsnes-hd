<?xml version="1.0" encoding="UTF-8"?>
<addon id="game.libretro.bsnes-hd"
		name="bsnes-hd"
		version="0.0.0.0"
		provider-name="libretro">
	<requires>
		<import addon="game.libretro" version="1.0.0"/>
	</requires>
	<extension point="kodi.gameclient"
			library_@PLATFORM@="@LIBRARY_FILENAME@">
		<platforms></platforms>
		<extensions></extensions>
		<supports_vfs>false</supports_vfs>
		<supports_standalone>false</supports_standalone>
		<requires_opengl>false</requires_opengl>
	</extension>
	<extension point="xbmc.addon.metadata">
		<license>GPLv2</license>
		<platform>@PLATFORM@</platform>
		<source>https://github.com/kodi-game/game.libretro.bsnes-hd</source>
		<summary lang="en_GB">bsnes-hd</summary>
		<description lang="en_GB">bsnes-hd is a fork of bsnes that adds HD video features.</description>
		<disclaimer lang="en_GB">In loving memory of Near / Byuu</disclaimer>
	</extension>
</addon>
